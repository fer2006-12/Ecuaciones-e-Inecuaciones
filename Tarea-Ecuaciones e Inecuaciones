<body>
  <div class="container">
    <h1>Calculadora Cuadrática</h1>
    <label for="a">Coeficiente a:</label>
    <input type="number" id="a" value="1">
    
    <label for="b">Coeficiente b:</label>
    <input type="number" id="b" value="0">
    
    <label for="c">Coeficiente c:</label>
    <input type="number" id="c" value="-4">
    
    <label for="tipo">Tipo:</label>
    <select id="tipo">
      <option value="ecuacion">Ecuación (ax² + bx + c = 0)</option>
      <option value="mayor">Inecuación (ax² + bx + c > 0)</option>
      <option value="menor">Inecuación (ax² + bx + c < 0)</option>
    </select>

    <button onclick="resolver()">Resolver</button>

    <div id="resultado" class="resultado"></div>
  </div>

  <script>
    function resolver() {
      const a = parseFloat(document.getElementById("a").value);
      const b = parseFloat(document.getElementById("b").value);
      const c = parseFloat(document.getElementById("c").value);
      const tipo = document.getElementById("tipo").value;
      const res = document.getElementById("resultado");

      const discriminante = b*b - 4*a*c;
      let mensaje = "";

      if (tipo === "ecuacion") {
        if (discriminante < 0) {
          mensaje = "No tiene soluciones reales.";
        } else {
          const x1 = (-b + Math.sqrt(discriminante)) / (2*a);
          const x2 = (-b - Math.sqrt(discriminante)) / (2*a);
          mensaje = (x1 === x2)
            ? `Tiene una raíz doble: x = ${x1.toFixed(2)}`
            : `Las soluciones son: x₁ = ${x1.toFixed(2)}, x₂ = ${x2.toFixed(2)}`;
        }
      } else {
        if (discriminante < 0) {
          mensaje = (tipo === "mayor")
            ? (a > 0 ? "Solución: todos los reales (ℝ)" : "Sin solución real")
            : (a < 0 ? "Solución: todos los reales (ℝ)" : "Sin solución real");
        } else {
          const x1 = (-b + Math.sqrt(discriminante)) / (2*a);
          const x2 = (-b - Math.sqrt(discriminante)) / (2*a);
          const [min, max] = [Math.min(x1, x2), Math.max(x1, x2)];

          if (tipo === "mayor") {
            mensaje = (a > 0)
              ? `Solución: (-∞, ${min.toFixed(2)}) ∪ (${max.toFixed(2)}, ∞)`
              : `Solución: [${min.toFixed(2)}, ${max.toFixed(2)}]`;
          } else {
            mensaje = (a > 0)
              ? `Solución: [${min.toFixed(2)}, ${max.toFixed(2)}]`
              : `Solución: (-∞, ${min.toFixed(2)}) ∪ (${max.toFixed(2)}, ∞)`;
          }
        }
      }

      res.innerHTML = mensaje;
    }
  </script>
</body>
</html>
